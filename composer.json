{
  "name": "tkriek/copernica-api-php",
  "description": "Bindings and implementation of the REST side of the Copernica API",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Tom Kriek",
      "email": "tom@inktweb.nl"
    }
  ],
  "require": {
    "php": "5.6||^7.2",
    "guzzlehttp/guzzle": "^6.3",
    "ext-json": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "TomKriek\\CopernicaAPI\\": "src/"
    }
  },
  "scripts": {
    "style": "vendor/bin/phpcs --error-severity=1 --warning-severity=8 --extensions=php --colors",
    "fix-style": "vendor/bin/phpcbf --error-severity=1 --warning-severity=8 --extensions=php --colors"
  }
}
